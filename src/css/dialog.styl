#addPool
  max-width 350px
  input
    margin-top 5px
    margin-bottom 0
    width calc(100% - 10px)
  button
    width calc(50% - 5px)
    height 40px
    float left
    &:last-child
      float right
    &[name=add]
      background #2ecc71
    &[name=connect]
      background #2fd7d6

#about
  max-width 450px
  main
    font-size 12px
  #forkongithub a
    cursor pointer
    background #700
    color #fff
    text-decoration none
    text-align center
    font-weight bold
    padding 5px 40px
    font-size 0.8rem
    line-height 1.7rem
    transition 0.5s
    &:hover
      background #a00
      color #fff
    &::before, &::after
      content ""
      width 100%
      display block
      position absolute
      top 1px
      left 0
      height 1px
      background #fff
    &::after
      bottom 1px
      top auto
    width 200px
    position absolute
    top 35px
    right -85px
    transform rotate(45deg)
    -webkit-transform rotate(45deg)
    box-shadow 4px 4px 10px rgba(0, 0, 0, 0.5)
  #forkongithub
    position absolute
    display block
    top 0
    right 0
    width 200px
    overflow hidden
    height 200px

#addKey
  max-width 550px

#options
  max-width 550px
