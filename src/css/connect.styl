.miningOption
  cursor default
  color white
  display block
  height 210px
  justify-content center
  align-items center
  text-decoration none
  &:first-child
    background-color #0eafc7
  &:last-child
    background-color #b064e1

.miningOptionInstructions
  width 100%
  height 100%
  div
    width 50%
    height 100%
    float left
    &:first-child p
      display block
      text-align center
      line-height 210px
      font-size 30px
      margin 0
    &:last-child
      text-align right

#orHolder
  height 27px
  text-align center

#orLine
  border-bottom 1px solid #c2cacf
  height 14px
  margin-bottom -13px

#addNewPool .miningOptionInstructions
  > div:first-child
    padding-top 15px
    p
      line-height 50px
    form
      height 100px
      margin 10px auto 0 auto
      text-align left
      width 250px
      input
        width 240px
        height 30px
        &:first-child
          margin-top 0
        margin-top 8px !important
      button[type=submit]
        border 2px solid #fff
        width 250px
        font-weight bold
        font-size 18px
        background #2fd7d6
        color #fff
        height 30px
  > div:last-child > form
    button
      &[name=connect]
        background #2fd7d6
      &[name=remove]
        background #e74c3c
      &[name=edit]
        background #2ecc71

#keyCtrl
  button
    &[name=get_keys]
      background #2fd7d6
    &[name=remove]
      background #e74c3c
    &[name=new]
      background #2ecc71

#keyCtrl, #addNewPool .miningOptionInstructions > div:last-child > form
  padding 10px
  height 150px
  display block
  ul.list
    background #9fcadb
    height 160px
    padding 0
    margin 0
    overflow-x hidden
    overflow-y auto
    float left
    width 100%
  .listDiv
    width calc(100% - 50px)
    float left
    .searchBox
      width calc(100% - 30px)
      padding-left 25px
    .fa-search
      position absolute
      left 7px
      top 8px
      width 15px
      height 15px
      color #ccc
  .ctrlDiv
    width 40px
    height 100%
    float right
    position relative
  button
    width 40px
    height 40px
    font-weight bold
    font-size 18px
    margin-top 10px
    &:first-child
      margin-top 0

#loadStat
  width 40px
  height 40px
  text-align center
  position absolute
  top 10px
  right 0
  font-size 34px
  cursor pointer
  display none
  &.failed
    color #880000

.bluelist
  li
    cursor pointer
    background #3498db
    list-style none
    padding 0 10px
    height 35px
    line-height 35px
    overflow hidden
    font-size 11px
    text-align left
    white-space nowrap
    text-overflow ellipsis
    &:hover
      background #47a5db
    &.selected
      background #2980b9
      &:hover
        background #438bb9

#poolKeyDropdown
  position absolute
  top 15px
  left -40px
  width 250px
  display none
  li
    height 25px
    line-height 25px
