html, button, input, select, textarea, .pure-g [class *= "pure-u"], .pure-g-r [class *= "pure-u"]
  font-family 'Open Sans', sans-serif

html
  background #2d2d2d
  overflow hidden

body
  display flex
  flex-direction column
  max-width 800px
  margin 0 auto
  -webkit-touch-callout none
  -webkit-user-select none
  user-select none

header > .home-menu
  background inherit !important
  height 54px
  display flex
  position relative

header > .home-menu > a.pure-menu-heading, header > .home-menu > ul, header > .home-menu > ul > li
  display flex !important
  align-items center
  justify-content center
  line-height normal !important

header > .home-menu > a.pure-menu-heading
  color white
  font-size 1.5em

header > .home-menu > ul > li > a
  color #ced4d9

header > .home-menu > ul > li > a:hover, header > .home-menu > ul > li > a:focus
  background inherit !important

header > .home-menu > ul > li > a:hover, header > .home-menu > ul > li.pure-menu-selected > a
  color white

main
  background-color #ebf4fa
  position relative
  padding 12px

footer
  -webkit-touch-callout text
  -webkit-user-select text
  user-select text
  text-align center
  color #b3b3b3
  text-decoration none
  font-size 0.8em
  padding 15px
  line-height 24px

footer a
  color #fff
  text-decoration none

footer iframe
  vertical-align middle

.arrow
  border-top 3px solid #ebebeb
  border-right 3px solid #ebebeb
  border-bottom 3px inset transparent
  border-left 3px inset transparent
  display block
  position absolute
  width 0 !important
  height 0 !important
  right 0
  top 0
  transition border-color 300ms
  float none !important

.arrow-input
  display block
  position relative

input[type=text]
  text-overflow ellipsis
  border none
  background #fff
  color #999
  border-radius 0
  padding 0 5px
  display block
  font 400 12.2px "Open Sans", sans-serif
  width 100%
  height 30px
  transition border-color 300ms, color 300ms
  &:focus + .arrow
    border-top-color #888
    border-right-color #888

button
  border 2px solid #fff
  width 250px
  font-weight bold
  font-size 18px
  margin-top 8px
  background #2fd7d6
  color #fff
  &:disabled
    background #999 !important
    border-color #ccc !important
    color #ccc !important
    cursor not-allowed !important

*
  outline none
